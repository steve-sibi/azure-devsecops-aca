# Local run (Docker Compose)
API_KEY=local-dev-key
REQUIRE_API_KEY=true

QUEUE_NAME=tasks
QUEUE_BACKEND=redis
RESULT_BACKEND=redis

# When using Docker Compose, service DNS names work (redis/clamav).
# If running the API/worker directly on your host, use localhost instead.
REDIS_URL=redis://redis:6379/0
REDIS_QUEUE_KEY=queue:tasks
REDIS_DLQ_KEY=dlq:tasks
REDIS_RESULT_PREFIX=scan:
REDIS_RESULT_TTL_SECONDS=0

SCAN_ENGINE=clamav
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# Security defaults
BLOCK_PRIVATE_NETWORKS=true
RATE_LIMIT_RPM=60
RATE_LIMIT_WINDOW_SECONDS=60
